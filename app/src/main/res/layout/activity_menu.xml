<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/btn_vlue_anim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_selector"
        android:onClick="onClick"
        android:text="Value animator"
        app:layout_constraintBottom_toTopOf="@+id/btn_obect_anim"
        app:layout_constraintEnd_toEndOf="@+id/btn_obect_anim"
        app:layout_constraintStart_toStartOf="@+id/btn_obect_anim"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_obect_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/btn_selector"
        android:onClick="onClick"
        android:text="Object animator"
        app:layout_constraintBottom_toTopOf="@+id/btn_anim_examples"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_vlue_anim" />

    <Button
        android:id="@+id/btn_anim_examples"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_selector"
        android:onClick="onClick"
        android:text="Frame and Animation"
        app:layout_constraintBottom_toTopOf="@+id/btn_vector_anim"
        app:layout_constraintEnd_toEndOf="@+id/btn_obect_anim"
        app:layout_constraintStart_toStartOf="@+id/btn_obect_anim"
        app:layout_constraintTop_toBottomOf="@+id/btn_obect_anim" />

    <Button
        android:id="@+id/btn_vector_anim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Vector Anim"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_obect_anim"
        app:layout_constraintStart_toStartOf="@+id/btn_obect_anim"
        app:layout_constraintTop_toBottomOf="@+id/btn_anim_examples" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="40dp" />

</android.support.constraint.ConstraintLayout>